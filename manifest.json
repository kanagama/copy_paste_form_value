{
  "manifest_version": 3,
  "name": "copy paste form value",
  "version": "2.0.0",
  "default_locale": "en",
  "description": "__MSG_description__",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js":[
      "js/content.js"
    ],
    "run_at": "document_end"
  }],
  "background": {
    "service_worker" : "background.js"
  },
  "commands": {
    "copy": {
      "suggested_key": {
        "default": "Alt+I"
      },
      "description": "__MSG_copyBtnDescription__"
    },
    "paste": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "__MSG_pasteBtnDescription__"
    },
    "toggle": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "__MSG_copyPasteBtn__"
    },
    "message": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "__MSG_flashMessage__"
    }
  },
  "permissions": [
    "storage",
    "commands"
  ]
}
